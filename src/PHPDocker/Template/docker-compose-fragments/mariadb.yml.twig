{% if project.hasMariadb() %}
    mariadb:
      image: mariadb:{{ mariadb.getVersion() }}
      container_name: {{ slug }}-mariadb
      working_dir: /application
      volumes:
        - .:/application
      environment:
        - MYSQL_ROOT_PASSWORD={{ mariadb.getRootPassword() }}
        - MYSQL_DATABASE={{ mariadb.getDatabaseName() }}
        - MYSQL_USER={{ mariadb.getUsername() }}
        - MYSQL_PASSWORD={{ mariadb.getPassword() }}
{% endif %}
